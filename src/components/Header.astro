---
import { LogoutButton } from './auth/LogoutButton';

interface Props {
  user: {
    id: string;
    email: string | undefined;
  };
}

const { user } = Astro.props;
---

<header class="border-b border-border bg-background">
  <div class="container mx-auto flex items-center justify-between px-4 py-4">
    <div class="flex items-center gap-6">
      <a href="/" class="text-xl font-bold text-foreground hover:text-foreground/80 transition-colors">
        InterviewPrep AI
      </a>
      <nav class="hidden md:flex items-center gap-4">
        <a href="/" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
          Moje pytania
        </a>
        <a href="/generator" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
          Generator
        </a>
      </nav>
    </div>

    <div class="flex items-center gap-4">
      <span class="text-sm text-muted-foreground hidden sm:inline-block">
        {user.email}
      </span>
      <LogoutButton client:load />
    </div>
  </div>
</header>

