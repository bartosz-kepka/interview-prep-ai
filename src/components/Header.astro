---
import { LogoutButton } from "./auth/LogoutButton";
import { MobileNav } from "@/components/layout/MobileNav";

interface Props {
  user: {
    id: string;
    email: string | undefined;
  };
}

const { user } = Astro.props;

const homeClass =
  Astro.url.pathname === "/questions" ? "text-foreground font-medium" : "text-muted-foreground hover:text-foreground";
const generatorClass =
  Astro.url.pathname === "/generator" ? "text-foreground font-medium" : "text-muted-foreground hover:text-foreground";
---

<header class="border-b border-border bg-background">
  <div class="container mx-auto flex items-center justify-between px-4 py-4">
    <div class="flex items-center gap-6">
      <a href="/" class="text-xl font-bold text-foreground hover:text-foreground/80 transition-colors">
        InterviewPrep AI
      </a>
      <nav class="hidden items-center gap-4 md:flex">
        <a href="/questions" class={`text-sm transition-colors ${homeClass}`}>My questions</a>
        <a href="/generator" class={`text-sm transition-colors ${generatorClass}`}>Generator</a>
      </nav>
    </div>

    <div class="hidden items-center gap-4 md:flex">
      <span class="text-sm text-muted-foreground hidden sm:inline-block">
        {user.email}
      </span>
      <LogoutButton client:load />
    </div>
    <div class="flex md:hidden">
      <MobileNav client:load userEmail={user.email} currentPath={Astro.url.pathname} />
    </div>
  </div>
</header>
