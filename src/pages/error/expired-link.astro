---
import Layout from '../../layouts/Layout.astro';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '../../components/ui/card';
import { Button } from '../../components/ui/button';

export const prerender = false;
---

<Layout title="Link Expired - Interview Prep AI">
  <main class="container mx-auto px-4 py-8 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md">
      <Card>
        <CardHeader>
          <CardTitle>Link expired</CardTitle>
          <CardDescription>This verification or reset link is no longer valid</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="space-y-4">
            <p class="text-sm text-muted-foreground">
              The link you clicked has expired or has already been used. This is a security measure to protect your account.
            </p>

            <div class="space-y-2">
              <p class="text-sm font-medium">What would you like to do?</p>
              <div class="flex flex-col gap-2">
                <Button asChild={true} variant="default" className="w-full">
                  <a href="/signup">Create a new account</a>
                </Button>
                <Button asChild={true} variant="outline" className="w-full">
                  <a href="/forgot-password">Request a new password reset</a>
                </Button>
              </div>
            </div>

            <div class="pt-4 border-t text-center">
              <a href="/login" class="text-sm text-primary hover:underline">
                Back to log in
              </a>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  </main>
</Layout>
